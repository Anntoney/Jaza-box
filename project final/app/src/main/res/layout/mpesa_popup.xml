<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cancelMpesaPopup"
        android:padding="5dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Total Cost to pay :" />

        <TextView
            android:id="@+id/totalCostTV"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/material_green_500"
            android:textStyle="bold"

            tools:text="Ksh 500" />
    </LinearLayout>

    <LinearLayout
    android:padding="6dp"
    android:layout_marginTop="24dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="40dp"

        app:srcCompat="@drawable/mpesa" />

    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:id="@+id/textInputLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

      >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mpesa_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mpesa Phone No."
            android:inputType="phone" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>

    <Button
        android:id="@+id/mpesaPayBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="PAY"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</LinearLayout>